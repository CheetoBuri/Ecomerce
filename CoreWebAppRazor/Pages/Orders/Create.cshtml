@page
@model CoreWebAppRazor.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Order</h2>

<form method="post">
    <div class="form-group">
        <label for="AgentID">Agent</label>
        <select asp-for="Order.AgentID" class="form-control" asp-items="@(new SelectList(Model.Agents, "AgentID", "AgentName"))">
            <option value="">Select Agent</option>
        </select>
        <span asp-validation-for="Order.AgentID" class="text-danger"></span>
    </div>

    <h3>Order Items</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Unit Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>
                        <input type="number" class="form-control" name="OrderDetails[@item.ItemID].Quantity" min="1" />
                    </td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Create Order</button>
</form>

